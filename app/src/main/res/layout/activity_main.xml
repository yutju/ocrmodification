<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- 쇼핑 카트 이미지 -->
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:src="@drawable/smartshoppingcart"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="0dp" />

        <!-- 타이틀 텍스트 -->
        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="All-in-One Shopping Cart"
            android:layout_below="@id/imageView"
            android:layout_centerHorizontal="true"
            android:textSize="35sp"
            android:textColor="#4169E1"
            android:textStyle="bold"
            android:layout_marginTop="20dp" />

        <!-- 로그인 버튼 -->
        <Button
            android:id="@+id/login_button"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:text="로그인"
            android:textSize="30sp"
            android:layout_below="@id/textView"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp" />

        <!-- 지도 버튼 -->
        <Button
            android:id="@+id/map_button"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:text="마트 지도"
            android:textSize="30sp"
            android:layout_below="@id/login_button"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp" />

        <!-- 장바구니 버튼 -->
        <Button
            android:id="@+id/cart_button"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:text="장바구니"
            android:textSize="30sp"
            android:layout_below="@id/map_button"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp" />

        <!-- 재고 조회 버튼 -->
        <Button
            android:id="@+id/stock_button"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:text="재고 조회"
            android:textSize="30sp"
            android:layout_below="@id/cart_button"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp" />

        <!-- 회원 정보 관리 버튼 -->
        <Button
            android:id="@+id/manage_profile_button"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:text="회원 정보 관리"
            android:textSize="30sp"
            android:layout_below="@id/stock_button"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp" />
    </RelativeLayout>
</ScrollView>
